<Window x:Class="Montageplan.View.Windows.GenericWaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bitte warten" Height="120" Width="400" Name="this" 
        Background="Transparent" WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True"  
        FontSize="8.8pt">

    <Border Margin="10" Background="{StaticResource windowBackgroundBrush}" 
            BorderThickness="1" BorderBrush="{StaticResource genericControlBorderBrush}" >

        <StackPanel VerticalAlignment="Center">
            <TextBlock Name="txtTopLine" Text="-"
                               VerticalAlignment="Center" FontSize="11pt" 
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               SnapsToDevicePixels="True"
                               Margin="0" TextTrimming="WordEllipsis"  />
            <TextBlock Name="txtBottomLine" Text="-"
                               VerticalAlignment="Center" FontSize="11pt" 
                               HorizontalAlignment="Center"
                               FontWeight="Normal"
                               SnapsToDevicePixels="True"
                               Margin="0,10,0,0" TextTrimming="WordEllipsis"  />
        </StackPanel>
    </Border>
</Window>
