<UserControl x:Class="Montageplan.EasyOptions.Panels.AboutOptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             FontFamily="Arial" FontSize="10pt"
             Background="Transparent"
             Height="350" 
             Width="800">

    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="12pt" Text="Über"/>
        <DockPanel Margin="5,5,0,0">
            <TextBlock Margin="0,0,0,0" Text="Programmversion:"/>
            <TextBlock Name="softwareVersionTextBlock" Margin="5,0,0,0" Text="[]"/>
        </DockPanel>
        <DockPanel Margin="5,5,0,0">
            <TextBlock Margin="0,0,0,0" Text="Datenbankversion:"/>
            <TextBlock Name="databaseVersionTextBlock" Margin="5,0,0,0" Text="[]"/>
        </DockPanel>
    </StackPanel>

</UserControl>
